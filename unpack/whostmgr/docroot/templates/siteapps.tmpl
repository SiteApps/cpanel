<div id="content_container" style="float: left; width: 870px; border: 1px solid #d0d0d0;">

    <div style="float: left; display: inline; width: 420px; padding: 20px; background-color: #ffffff; margin-bottom: 20px;">

        [% IF data.login_incorrect %]

        <div class="message" style="background-color: #ff8080;"> 
            <table callpadding="6" cellspacing="3"><tr><td alight="left" valign="top">
                <img src="../addon_plugins/icon_info24x.png">
            </td><td>
                <b>[% data.error_message %]</b>
            </td></tr></table>
        </div>

        [% ELSIF data.activated %]

        <div class="message" style="background-color: #e8ff70;"> 
            <table callpadding="6" cellspacing="3"><tr><td alight="left" valign="top">
                <img src="../addon_plugins/icon_info24x.png">
            </td><td>
                <b>Congratulations!  Your setup is complete.</b>
            </td></tr></table>
        </div>

        [% END %]

        <form method="post">

            <div style="padding-top: 10px; clear: both;">
                <table cellpadding="0" cellspacing="0">
                    <tr>
                      <td align="left" valign="top"><b>Public Key</b> <font color="red">*</font></td>
                      <td align="right" valign="top"><!-- <a href="http://tldpluginmanager.com/reseller/create-account.aspx" target="_blank">Don't have an account?</a> XXX --></td>
                    </tr><tr>
                      <td colspan="2">
                          <input type="text" name="public_key" class="textbox" value="[% data.public_key%]">
                      </td>
                </table>
            </div>

            <div style="padding-top: 10px;"><b>Private Key</b> <font color="red">*</font><br><input type="text" name="private_key" class="textbox"  value="[% data.private_key %]"></div>

<!--
            <div style="padding-top: 10px;">
                <b>Billing URL</b> <font color="red">*</font><br><input type="text" name="billing_url" class="textbox"  value="[% data.billing_url %]"><br>
                URL of the billing system
            </div>
  -->


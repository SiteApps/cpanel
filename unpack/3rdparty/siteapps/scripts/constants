#!/bin/bash


##cPanel
CPANEL_PATH="/usr/local/cpanel"
CPANEL_PLUGIN_CACHE_FILE="/var/cpanel/pluginscache.yaml"
CUSTOM_OPT_MOD_DIR="/var/cpanel/easy/apache/custom_opt_mods/"
RAWOPTS_DIR="/var/cpanel/easy/apache/rawopts/"

##SiteApps

GA_ID="UA-40364096-2"
SITEAPPS_DATADIR="/var/cpanel/siteapps/"
SITEAPPS_CREDENTIALS="$SITEAPPS_DATADIR/credentials"
SITEAPPS_PATH="$CPANEL_PATH/3rdparty/siteapps"
SITEAPPS_HTML_TEMPLATES="$SITEAPPS_PATH/templates"
SITEAPPS_APPCONF_FILE="$SITEAPPS_PATH/app/siteapps.conf"
FILES="Cpanel/Siteapps.pm* Whostmgr/SiteappsDB.pm* Whostmgr/Siteapps.pm* Whostmgr/SiteappsTAG.pm* Whostmgr/SiteappsTools.pm whostmgr/docroot/addon_plugins/icon_info24x.png whostmgr/docroot/addon_plugins/siteapps_25x25.gif whostmgr/docroot/cgi/addon_siteapps.cgi whostmgr/docroot/templates/siteapps.tmpl"
AUTOTAG_CONF_FILENAME="siteapps_tag.conf"
VERSION=$(cat $SITEAPPS_PATH/version)

##Aapache
APACHE_CONFIG_DIR="/usr/local/apache/conf/userdata/std/2/"
APACHE_PATH="/usr/local/apache"
APACHE_CONFIG="$APACHE_PATH/conf/includes/pre_main_global.conf"
APACHE_CTL="$APACHE_PATH/bin/apachectl"
SUPPORTED_APACHE_VERSIONS="Apache2_4 Apache2_2"
APACHE_MAJOR_VERSION=`$APACHE_CTL -v | head -n1 | cut -d/ -f2 | awk '{print $1}' | cut -d. -f1,2`
LOAD_MODULE_LINE="LoadModule substitute_module modules/mod_substitute.so"
APXS="$APACHE_PATH/bin/apxs"

##General
#BLUE="\E[37;44m" 
COLOR_END="\033[0m"
GREEN="\E[37;32m"
RED="\E[47;31m"
